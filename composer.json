{
    "name": "waibelp/yamlizer",
    "description": "Yamlizer is an PHP object serializer built with an eye on simplicity and performance.",
    "keywords": ["serializer", "deserializer", "yaml", "json", "yml", "php"],
    "type": "library",
    "autoload": {
        "psr-4": {
            "Yamlizer\\": "src/",
            "Yamlizer\\Tests\\": "tests/src/"
        },
        "files": [
            "src/autoload.php"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "require": {
        "php": "^5.4",
        "doctrine/common": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "2.*"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Pierre Waibel",
            "email": "waibelp85@googlemail.com"
        }
    ]
}
